{
  "name": "code-reading-helper-in-mermaid-sequence-diagram",
  "displayName": "code-reading-helper-in-mermaid-sequence-diagram",
  "description": "show mermaid diagrams in webview and click to jump function",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mermaidWebview.showPreview",
        "title": "ShowMermaidPreview"
      }
    ],
    "languages": [
      {
        "id": "mermaid",
        "aliases": [
          "Mermaid",
          "mermaid"
        ],
        "extensions": [
          ".mmd",
          ".mermaid"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "mermaidWebview.showPreview",
          "when": "resourceLangId == mermaid",
          "group": "navigation",
          "icon": {
            "light": "media/eye.svg",
            "dark": "media/eye.svg"
          }
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@panzoom/panzoom": "^4.6.0"
  }
}
